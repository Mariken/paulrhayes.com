<% if (experiment.testDescription) { %>
  <script>
    $(function(){
        $('.show-experiment').on('click', function(evt) {
            evt.preventDefault();
            $('.fallback').fadeOut('slow', function() {
                $('.test').fadeIn('slow');
            });
        });
    });
  </script>
<% } %>
<% if (experiment.test) { %>
  <script src="../tests/<%= experiment.test %>.js"></script>
<% } %>
<% if (experiment.js) { %>
  <% if (experiment.js instanceof Array) {
    for(var i = 0, l = experiment.js.length; i < l; i++) {
      %>
      <script src="<%= experiment.js[i] %>?<%= config.site_build %>"></script>
      <%
    }
  } else { %>
    <script src="<%= experiment.js %>?<%= config.site_build %>"></script>
  <% } %>
<% } %>
